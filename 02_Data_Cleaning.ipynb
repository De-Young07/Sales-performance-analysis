import pandas as pd

def preprocess_sales_data(file_path):
    # Load the dataset
    sales_data = pd.read_csv(file_path)

    # Convert date columns to datetime
    sales_data['Order_Date'] = pd.to_datetime(sales_data['Order_Date'])
    sales_data['Ship_Date'] = pd.to_datetime(sales_data['Ship_Date'])

    # Creating derived columns
    sales_data['Ship_Delay'] = (sales_data['Ship_Date'] - sales_data['Order_Date']).dt.days
    sales_data['Year'] = sales_data['Order_Date'].dt.year
    sales_data['Month'] = sales_data['Order_Date'].dt.month
    sales_data['Quarter'] = sales_data['Order_Date'].dt.quarter

    # Standardizing categories
    sales_data['Category'] = sales_data['Category'].str.lower().str.strip()

    # Handling missing values
    sales_data.fillna(method='ffill', inplace=True)  # Forward fill for missing values

    return sales_data

