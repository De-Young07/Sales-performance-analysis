# Sales Performance Analysis Visualizations

import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns

# Load the dataset
# dataset should be the path to your dataset
# df = pd.read_csv('path_to_your_dataset.csv')

df = pd.DataFrame({
    'Sales': [200, 300, 400, 500, 600],
    'Profit': [20, 50, 80, 70, 90],
    'Category': ['A', 'B', 'C', 'A', 'B'],
    'Region': ['North', 'South', 'East', 'West', 'North'],
    'Discount': [0, 0.1, 0.2, 0.3, 0.4],
    'Shipping_Delay': [2, 3, 1, 5, 4]
})

# 1. Line charts for sales and profit trends
plt.figure(figsize=(12, 6))
plt.plot(df['Sales'], label='Sales', color='blue')
plt.plot(df['Profit'], label='Profit', color='orange')
plt.title('Sales and Profit Trends')
plt.xlabel('Time')
plt.ylabel('Amount')
plt.legend()
plt.show()

# 2. Bar charts for category and region performance
plt.figure(figsize=(12, 6))
sns.barplot(x='Category', y='Sales', data=df)
plt.title('Sales Performance by Category')
plt.show()

plt.figure(figsize=(12, 6))
sns.barplot(x='Region', y='Sales', data=df)
plt.title('Sales Performance by Region')
plt.show()

# 3. Scatter plot for discount vs profit
plt.figure(figsize=(12, 6))
sns.scatterplot(x='Discount', y='Profit', data=df)
plt.title('Discount vs Profit')
plt.show()

# 4. Boxplots for shipping delays
plt.figure(figsize=(12, 6))
sns.boxplot(y='Shipping_Delay', data=df)
plt.title('Shipping Delays')
plt.show()